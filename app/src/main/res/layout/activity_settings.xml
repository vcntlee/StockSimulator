<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/settings_toolbar"
            layout="@layout/main_actionbar"
            />

       <TextView
           android:id="@+id/instructions"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@id/settings_toolbar"
           android:text="Set a starting balance"
           android:layout_marginTop="15dp"/>

        <SeekBar
            android:id="@+id/setBalanceSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/instructions"
            android:max="975000"
            android:padding="15dp"/>
        <TextView
            android:id="@+id/startingBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/setBalanceSeekBar"
            android:text="25000"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/confirmContainer"


            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESET!"
                android:id="@+id/resetButton"
                android:textColor="#eeeeee"
                android:background="@color/toolbarBackground"
                android:textSize="12sp"
                android:gravity="center"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Just Kidding!"
                android:id="@+id/cancelButton"
                android:textColor="#eeeeee"
                android:background="@color/toolbarBackground"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/left_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_nav"

        />

</android.support.v4.widget.DrawerLayout>
