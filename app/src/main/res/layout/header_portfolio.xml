<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.PortfolioActivity"
    android:background="@color/background"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/balanceContainer"
        android:background="@drawable/background_with_shadow"
        android:layout_marginBottom="@dimen/activity_vertical_margin"

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="15dp"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Cash:"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/fontColor"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$----"
                android:id="@+id/availableCash"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/fontColor"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"



                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profit:"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/fontColor"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$---"
                android:id="@+id/profitLossValue"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/fontColor"
                android:layout_marginBottom="5dp"


                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Return:"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/fontColor"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" ---"
                android:id="@+id/percentReturn"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/fontColor"
                android:layout_marginBottom="5dp"

                />

        </LinearLayout>



    </LinearLayout>



        <!-- this is for the header -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerContainer"
        android:background="@drawable/background_without_shadow"
        android:layout_below="@id/balanceContainer"
        android:padding="15dp"
        android:layout_marginTop="10dp"


        >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ticker"
        android:textSize="16sp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif"
        android:visibility="invisible"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="16sp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Return"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>