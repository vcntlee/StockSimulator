<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.PortfolioActivity"
    android:background="@color/background"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/balanceContainer"
        android:background="@drawable/background_with_shadow"
        android:layout_marginBottom="@dimen/activity_vertical_margin"

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="15dp"


        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Positions Value:"
                android:textSize="14sp"
                android:gravity="right"
                android:textColor="@color/fontColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$---"
                android:id="@+id/portfolioValue"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/fontColor"

                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Cash:"
                android:textSize="14sp"
                android:gravity="right"
                android:textColor="@color/fontColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$----"
                android:id="@+id/availableCash"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/fontColor"

                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Return:"
                android:textSize="14sp"
                android:gravity="right"
                android:textColor="@color/fontColor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-- %"
                android:id="@+id/percentReturn"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/fontColor"

                />

        </LinearLayout>


    </LinearLayout>

        <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balanceContainer"
            android:layout_marginTop="30dp"
            android:text="Current Positions"
            android:textColor="@color/fontColor"
            android:textSize="18sp"
            android:id="@+id/currentPositionsLabel"

            /> -->

        <!-- this is for the header -->

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/headerContainer"
    android:background="@drawable/background_without_shadow"
    android:layout_below="@id/balanceContainer"
    android:padding="15dp"
    android:layout_marginTop="10dp"

        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ticker"
        android:textSize="14sp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="14sp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cost"
        android:textSize="14sp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Profit"
        android:textSize="14sp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif"/>

    </LinearLayout>


</RelativeLayout>